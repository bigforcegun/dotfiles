[core]
	autocrlf = input
	excludesfile = ~/.gitignore
	hooksPath = ~/.githooks
	ignorecase = false

[gc]
	autoDetach = false

[color]
  	ui = true

[push]
	followTags = true

[commit]
	gpgsign = true

[hooks]
	gitleaks = true

[pull]
	rebase = true

[diff]
	tool = meld
	prompt = false

[merge]
	tool = meld
	conflictStyle = diff3

[difftool]
	prompt = false

[difftool "meld"]
	cmd = meld "$LOCAL" "$REMOTE"

[difftool "vscode"]
	cmd = code --wait --diff $LOCAL $REMOTE

[mergetool "meld"]
	cmd = meld "$LOCAL" "$BASE" "$REMOTE" --output "$MERGED"

[mergetool "vscode"]
    cmd = code --wait $MERGED

[include]
	path = ~/.gitconfig-private/gitconfig
	#path = ~/.gitconfig-private/gitconfig-umbrellio

[alias]
	y = diff "@{yesterday}"
	w = whatchanged
