[core]
	autocrlf = input
	excludesfile = ~/.gitignore
	hooksPath = ~/.githooks
[gc]
	autoDetach = false
[push]
	followTags = true
[commit]
	gpgsign = true
[hooks]
	gitleaks = true
[diff]
  tool = meld
[mege]
  tool = meld
[difftool]
  prompt = false
[difftool "meld"]
  cmd = meld "$LOCAL" "$REMOTE"
[difftool "vscode"]
  cmd = code --wait --diff $LOCAL $REMOTE
[mergetool "meld"]
  cmd = meld "$LOCAL" "$BASE" "$REMOTE" --output "$MERGED"